{% block extrahead %}
{{ block.super }}
<script type="text/javascript">
    
    function getSelectedVals(name, value){
        var tmp = [];
        $("input[name='" + name + "']").each(function(){
            if ($(this).attr('checked')) {
                checked = ($(this).val());
                tmp.push(checked);
            }
        });
        var filters = tmp.join(',');
        $('#' + value).val(filters);
        //alert(filters)
        return filters;
    }
</script>
{% endblock %}
