            function updateCombo(combo_id, value, text){
                //alert("enter" + combo_id + " " + value + " " + text);
                $('#' + combo_id).append(new Option(text, value));
            }
            
            function showPopup(href, h, w){
            
            
            
                var left = (window.screen.width - h) / 2;
                var top = (window.screen.height - w) / 2
                
                
                var win = window.open(href, "", 'height=' + h + ',width=' + w + ',left=' + left + ',top=' + top + ',resizable=no,scrollbars=no,statusbar=0');
                win.focus();
                return false;
            }
        </script>
